# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gamelab

# Docker PostgreSQL Configuration (used by docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=gamelab

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME="Stylus One"
APP_URL=http://localhost:3000
BASE_URL=http://localhost:3000

# Security Configuration
SESSION_SECRET=your_session_secret_here
# Increment this version to invalidate all existing sessions after deployments
SESSION_VERSION=1.0

# Firebase Configuration (for authentication)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# Google OAuth Configuration (for Google Sign-In)
# Get this from Firebase Console -> Authentication -> Sign-in method -> Google -> Web SDK configuration
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id

# Tautulli Integration (for Plex monitoring)
TAUTULLI_URL=http://your-tautulli-url:8181
TAUTULLI_API_KEY=your_tautulli_api_key

# Email Service Configuration (Mailgun)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your-domain.com
MAILGUN_FROM_EMAIL=noreply@your-domain.com
MAILGUN_REGION=us
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME="Stylus One"

# Alternative Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Game Server Management (AMP)
AMP_API_URL=http://your-amp-server:8080/API
AMP_API_USERNAME=your_amp_username
AMP_API_PASSWORD=your_amp_password

# HD HomeRun Integration (for live TV streaming)
HDHOMERUN_URL=http://your-hdhomerun-ip

# Xtream Codes IPTV Integration (for live TV streaming)
XTREAM_SERVER_URL=https://your-xtream-server
XTREAM_USERNAME=your_xtream_username
XTREAM_PASSWORD=your_xtream_password

# Google Cast Custom Receiver (for Chromecast branding)
VITE_CAST_RECEIVER_APP_ID=your_cast_receiver_app_id

# Stripe Payment Processing (for subscriptions)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Development/Production Settings for Docker
# Use NODE_ENV=production for Docker builds
# Use NODE_ENV=development for local development with hot reload
